page {
  width: 100%;
}

.page__bd {
  width: 100%;
}

.main {
  width: 100%;
}

.banner {
  width: 100%;
}

.banner .banner-img {
  width: 100%;
  height: 300rpx;
}

.radioStation {
  width: 95%;
  margin: 7px;
}

.radioStation_tit {
  font-size: 16px;
  color: #000;
  margin-bottom: 11px;
  font-weight: normal;
}

.radioStation_main {
  overflow: hidden;
  margin-right: -10px;
}

.radioStation_main .radio_img {
  position: relative;
  float: left;
  width: 48%;
  padding-right: 4px;
  margin-bottom: 10px;
}

.radioStation_main .radio_img .radioStation_img {
  width: 100%;
  height: 410rpx;
}

.radioStation_main .radio_img .radioStation_play {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 14rpx;
  bottom: 100rpx;
}

.radioStation_main .radio_img .radioStation_text {
  position: absolute;
  width: 90%;
  height: 36px;
  line-height: 18px;
  bottom: 0;
  padding: 2px 7px 5px;
  background: #fff;
  font-size: 14px;
}

.radioStation_main .radio_img .radioStation_text2 {
  position: absolute;
  bottom: 0;
  z-index: 2;
  font-size: 12px;
  width: 90%;
  padding: 0 7px 5px;
  white-space: normal;
  word-wrap: break-word;
}

.radioStation_main .radio_img .radioStation_icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 14rpx;
  bottom: 100rpx;
}

.radioStation_main .radio_img .radio_num {
  position: absolute;
  color: #fff;
  left: 60rpx;
  bottom: 100rpx;
  font-size: 12px;
  font-weight: bold;
}
